{
  "name": "rater",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",

    "db:install": "docker pull mongodb/mongodb-community-server",

    "db:up": "npm run db:start && npm run db:copy && echo Waiting... && sleep 60 && npm run db:create",
    "db:down": "docker kill RRdb",
    
    "db:start": "docker run --name RRdb -d mongodb/mongodb-community-server:latest",
    "db:copy": "docker cp src/db RRdb:/",
    "db:sh": "docker exec -it RRdb mongosh",
    "db:bash": "docker exec -it RRdb bash",

    "db:update": "npm run db:copy && npm run db:create",
    "db:create": "docker exec -it RRdb mongosh -f ./db/createDB.js.js -f ./db/loadUsers.js"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^11.0.3",
    "next": "14.1.0",
    "next-auth": "^4.24.5",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "14.1.0"
  }
}
